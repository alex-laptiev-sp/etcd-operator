#!/usr/bin/env bash

# This script builds the operators' binaries

set -o errexit
set -o nounset
set -o pipefail

mkdir -p _output

DOCKER_REPO_ROOT="/go/src/github.com/coreos/etcd-operator"

docker run --rm \
	-v "$PWD":"$DOCKER_REPO_ROOT" \
	-w "$DOCKER_REPO_ROOT" \
	golang:0.15 \
	/bin/bash -c "go mod init && \
	    go get github.com/coreos/etcd-operator/pkg/cluster && \
		go get github.com/coreos/etcd-operator/pkg/util/etcdutil && \
		go get github.com/alex-laptiev-sp/etcd-operator/pkg/util/k8sutil && \
		go get github.com/coreos/etcd-operator/cmd/operator && \
		go get github.com/coreos/etcd-operator/pkg/util/k8sutil && \
		go get github.com/coreos/etcd-operator/pkg/apis/etcd/v1beta2 && \
		go get github.com/coreos/etcd-operator/pkg/backup/writer && \
		go get github.com/coreos/etcd-operator/pkg/util/azureutil/absfactory && \
		go get github.com/coreos/etcd-operator/pkg/util/awsutil/s3factory && \
		go get cloud.google.com/go/internal/trace@v0.34.0 && \
		go get cloud.google.com/go/storage@v0.34.0 && \
		go get github.com/googleapis/gax-go && \
		go get github.com/coreos/etcd-operator/pkg/util/gcputil/gcsfactory && \
		hack/build/restore-operator/build && \
		hack/build/operator/build && \
		hack/build/backup-operator/build"
